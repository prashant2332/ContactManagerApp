<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="contact"
            type="com.example.newcontactmanagerapp.Contacts" />
        <variable
            name="clickHandler"
            type="com.example.newcontactmanagerapp.UpdateContactActivityClickHandler" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/update"
        android:padding="16dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/update_contact"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:typeface="serif"
            android:layout_marginBottom="160dp"
            />

        <EditText

            android:id="@+id/contactNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/name"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:typeface="serif"
            android:text="@={contact.name}"
            android:inputType="textPersonName"
            android:autofillHints="" />

        <EditText
            android:id="@+id/contactEmailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:typeface="serif"
            android:layout_marginTop="10dp"
            android:text="@={contact.email}"
            android:inputType="textEmailAddress"
            android:autofillHints="" />
        <EditText
            android:id="@+id/contactPhoneEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:layout_marginTop="10dp"
            android:typeface="serif"
            android:text="@={contact.phone}"
            android:inputType="phone"
            android:autofillHints="" />
        <EditText
            android:id="@+id/contactAddressEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:typeface="serif"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:layout_marginTop="10dp"
            android:text="@={contact.address}"
            android:inputType="text"
            android:autofillHints="" />


        <Button
            android:id="@+id/updateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:text="@string/update_contactb"
            android:typeface="sans"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="80dp"
            android:onClick="@{clickHandler::onUpdateButtonClicked}" />

    </LinearLayout>
</layout>
